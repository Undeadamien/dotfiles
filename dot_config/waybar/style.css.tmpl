* {
  margin: 0;
  padding: 0;
}

#waybar {
  background: {{ .colors.bg }};
  color: {{ .colors.fg }};
  font-family: "Ubuntu Nerd Font";
  font-weight: bold;
  font-size: 12px;
  border: none;
  border-radius: {{ .rounding_waybar }};
}

.modules-left > * > *,
.modules-right > * > * {
  padding: 0px 4px 0px 4px;
  background: {{ .colors.bg }};
  border: 1px solid {{ .colors.border }};
  border-radius: {{ .rounding }};
}

.modules-left > * > * {
  margin: 4px 0px 4px 4px;
}
.modules-right > * > * {
  margin: 4px 4px 4px 0px;
}

.modules-left > * > *:hover,
.modules-right > * > *:hover {
  background: {{ .colors.bg_alt }};
}

#workspaces {
  background: inherit;
  font-size: 14px;
}
#workspaces button,
#workspaces button.empty {
  background: inherit;
  border: none;
  box-shadow: none;
  color: {{ .colors.border }};
  outline: none;
  text-shadow: none;
  min-width: 24px;
  min-height: 24px;
  border-radius: 0px;
}
#workspaces button.active {
  color: {{ .colors.fg }};
}
