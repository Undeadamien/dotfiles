* {
  font-family: "Ubuntu Nerd Font";
  font-size: 12px;
  font-weight: bold;
  margin: 0;
  padding: 0;
  transition: all 120ms ease-in-out;
  box-shadow: none;
}

tooltip {
  background: {{ .colors.bg }};
  color: {{ .colors.fg }};
  border: 1px solid {{ .colors.border }};
  border-radius: {{ .rounding }};
}

.modules-left > * > *,
.modules-right > * > * {
  background: {{ .colors.bg }};
  border: 1px solid {{ .colors.border }};
}
#waybar {
  background-color: rgba({{ .colors.bg_RGB }}, 1);
  color: {{ .colors.fg }};
  border-radius: 0;
}

.modules-left > * > *,
.modules-right > * > * {
  padding: 0 4px;
  border-radius: {{ .rounding }};
}
.modules-left > * > * {
  margin: 4px 0px 4px 4px;
}
.modules-right > * > * {
  margin: 4px 4px 4px 0;
}

#workspaces {
  background: inherit;
}
#workspaces button {
  background: {{ .colors.bg_alt }};
  color: {{ .colors.fg }};
  border: 1px solid {{ .colors.border }};
  box-shadow: none;
  outline: none;
  text-shadow: none;
  margin: 4px 2px;
  min-height: 0px;
  min-width: 24px;
  border-radius: {{ .rounding }};
}
#workspaces button.empty {
  background: transparent;
}
#workspaces button.visible {
  background: {{ .colors.bg_alt }};
}
#workspaces button.active {
  background: {{ .colors.border }};
}

#tray menu {
  border: 1px solid {{ .colors.border }};
  border-radius: {{ .rounding }};
  box-shadow: none;
  padding: 2px;
}
#tray menuitem {
  background: {{ .colors.bg }};
  padding: 2px 0px;
}
#tray menuitem:hover {
  background: {{ .colors.bg_alt }};
}
