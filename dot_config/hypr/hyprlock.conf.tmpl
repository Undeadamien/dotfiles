general {
	hide_cursor = true
    ignore_empty_input = true
}

background {
    path = ~/.config/hypr/wallpaper/wallpaper
    blur_passes = 1
    blur_size = 2
}

label {
	font_size = 48
	font_family = Ubuntu Nerd Font
	text = cmd[update:1000] echo "<span>$(date +"%H:%M")</span>"
	color = rgba(255, 255, 255, 1.0)
	position = 0,72
	halign = center
	valign = center
}

label {
	font_size = 16
	font_family = Ubuntu Nerd Font
	text = cmd[update:1000] echo "<span>$(date +"%A, %b %d")</span>"
	color = rgba(255, 255, 255, 1.0)
	position = 0,32
	halign = center
	valign = center
}

input-field {
	size = 160, 24
	font_family = Ubuntu Nerd Font
	outline_thickness = 1
	inner_color = rgba(255, 255, 255, 0.4)
	fade_on_empty = false
	placeholder_text =
	rounding = {{ .rounding }}
	position = 0,0
	halign = center
	valign = center
	fail_text =
}

