monitor = ,preferred,auto,1

$terminal = kitty
$fileManager = thunar
$menu = rofi -show drun -show-icons

exec-once = thunar --daemon
exec-once = ~/.config/hypr/script/wallpaper_selector.sh
exec-once = wlsunset -l 48.9 -L 2.5
exec-once = hypridle
exec-once = swaync
exec-once = discord --start-minimized
exec-once = waybar

exec-once = [ workspace 1 silent ] firefox
exec-once = [ workspace 2 silent ] $terminal

env = XCURSOR_SIZE,24
env = HYPRCURSOR_SIZE,24
env = XDG_CURRENT_DESKTOP,Hyprland

general {
    gaps_in = {{ div .gaps 2 }}px
    gaps_out = {{ .gaps }}px
    float_gaps = {{ .gaps }}px
    border_size = 1
    col.active_border = rgba({{ .hex.border | trimPrefix "#" }}ff)
    col.inactive_border = rgba({{ .hex.bg | trimPrefix "#" }}ff)
    resize_on_border = true
    allow_tearing = false
    layout = dwindle
}

cursor {
	inactive_timeout = 3
}

decoration {
    rounding = {{ .rounding }}
    active_opacity = 0.95
    inactive_opacity = 0.925
    blur {
        enabled = false
        size = 2
        passes = 2
        vibrancy = 0.1696
    }
}

animations {
    enabled = true
    bezier = fast, 0.33, 1, 0.68, 1
    animation = windows, 1, 3, fast, slide
    animation = windowsOut, 1, 3, fast, slide
    animation = border, 1, 2, fast
    animation = fade, 1, 2, fast
    animation = workspaces, 1, 3, fast, slide
    animation = layers, 1, 3, fast, popin 95%
}

dwindle {
    pseudotile = false
    preserve_split = true
    force_split = 2
}

master {
    new_status = slave
}

misc {
    force_default_wallpaper = 0
    disable_hyprland_logo = true
}

input {
    kb_layout = us, fr, pl
    kb_variant =
    kb_model =
    kb_options = caps:none
    kb_rules =
    follow_mouse = 2
    sensitivity = 0
    touchpad {
        natural_scroll = true
        disable_while_typing = true
    }
	touchdevice {
		enabled = true
	}
}

xwayland {
    force_zero_scaling = true
}

device {
    name = epic-mouse-v1
    sensitivity = -0.5
}

ecosystem {
	no_update_news = true
}

$mainMod = SUPER

bind = $mainMod, e, exec, rofi -show drun
bind = $mainMod, r, exec, pkill -USR1 -f ~/.config/hypr/script/wallpaper_selector.sh
bind = $mainMod, w, exec, rofi -show window
bind = $mainMod, q, exec, $terminal
bind = $mainMod, o, exec, hyprctl dispatch setprop "address:$(hyprctl activewindow -j | jq -r .address)" opaque toggle
bind = $mainMod, m, exec, ~/.config/hypr/script/hyprlock_helper.sh

bind =  ALT, Shift_L, exec, hyprctl switchxkblayout all next & pkill -RTMIN+1 waybar & notify-send
bind = , code:121, exec, wpctl set-mute @DEFAULT_SINK@ toggle
binde = , code:122, exec, wpctl set-volume @DEFAULT_SINK@ 5%-
binde = , code:123, exec, wpctl set-volume @DEFAULT_SINK@ 5%+
binde = , code:232, exec, brightnessctl s 10%-
binde = , code:233, exec, brightnessctl s 10%+
bind = , code:107, exec, ~/.config/hypr/script/screenshot.sh

bind = $mainMod, f, fullscreen, 1
bind = $mainMod, c, killactive
bind = $mainMod, s, togglesplit
bind = $mainMod SHIFT, m, exec, hyprctl dispatch exit
bind = $mainMod SHIFT, p, pin
bind = $mainMod SHIFT, c, centerwindow
bind = $mainMod SHIFT, f, togglefloating

binde = $mainMod, code:20, resizeactive, -1% 0
binde = $mainMod, code:21, resizeactive, 1% 0
binde = $mainMod SHIFT, code:20, resizeactive, 0 -1%
binde = $mainMod SHIFT, code:21, resizeactive, 0 1%

bind = $mainMod, h, movefocus, l
bind = $mainMod, l, movefocus, r
bind = $mainMod, k, movefocus, u
bind = $mainMod, j, movefocus, d
bind = $mainMod SHIFT, h, swapwindow, l
bind = $mainMod SHIFT, l, swapwindow, r
bind = $mainMod SHIFT, k, swapwindow, u
bind = $mainMod SHIFT, j, swapwindow, d
bind = $mainMod CTRL, h, movewindow, l
bind = $mainMod CTRL, l, movewindow, r
bind = $mainMod CTRL, k, movewindow, u
bind = $mainMod CTRL, j, movewindow, d
bind = $mainMod, n, cyclenext
bind = $mainMod, p, cyclenext, prev

bind = $mainMod, 1, workspace, 1
bind = $mainMod, 2, workspace, 2
bind = $mainMod, 3, workspace, 3
bind = $mainMod, 4, workspace, 4
bind = $mainMod, 5, workspace, 5
bind = $mainMod SHIFT, 1, movetoworkspace, 1
bind = $mainMod SHIFT, 2, movetoworkspace, 2
bind = $mainMod SHIFT, 3, movetoworkspace, 3
bind = $mainMod SHIFT, 4, movetoworkspace, 4
bind = $mainMod SHIFT, 5, movetoworkspace, 5
bind = $mainMod CTRL, 1, movetoworkspacesilent, 1
bind = $mainMod CTRL, 2, movetoworkspacesilent, 2
bind = $mainMod CTRL, 3, movetoworkspacesilent, 3
bind = $mainMod CTRL, 4, movetoworkspacesilent, 4
bind = $mainMod CTRL, 5, movetoworkspacesilent, 5
bind = $mainMod, TAB, exec, ~/.config/hypr/script/workspace_cycle.sh next 5
bind = $mainMod SHIFT, TAB, exec, ~/.config/hypr/script/workspace_cycle.sh prev 5

bindm = $mainMod, mouse:272, movewindow
bindm = $mainMod, mouse:273, resizewindow

windowrule = no_blur on, match:class .*
windowrule = opacity 1 override, match:class krita
windowrule = opacity 1 override, match:title .*YouTube.*

layerrule = dim_around on, match:namespace rofi
layerrule = animation slide slow, match:namespace waybar
