#![enable(implicit_some)]
#![enable(unwrap_newtypes)]
#![enable(unwrap_variant_newtypes)]
(
    default_album_art_path: None,
    show_song_table_header: true,
    draw_borders: false,
    format_tag_separator: " | ",
    browser_column_widths: [20, 38, 42],
    background_color: None,
    text_color: None,
    header_background_color: None,
    modal_background_color: None,
    modal_backdrop: false,
    preview_label_style: (fg: "{{ .hex.accent }}"),
    preview_metadata_group_style: (fg: "{{ .hex.accent }}", modifiers: "Bold"),
    tab_bar: (
        active_style: (fg: "black", bg: "{{ .hex.accent }}", modifiers: None),
        inactive_style: (modifiers: None),
    ),
    highlighted_item_style: (fg: "{{ .hex.accent }}", modifiers: "Bold"),
    current_item_style: (fg: "black", bg: "{{ .hex.accent }}", modifiers: "Bold"),
    borders_style: (fg: "{{ .hex.border }}"),
    highlight_border_style: (fg: "{{ .hex.border }}"),
    symbols: (
        song: "S",
        dir: "D",
        playlist: "P",
        marker: ">",
        ellipsis: "...",
        song_style: None,
        dir_style: None,
        playlist_style: None,
    ),
    level_styles: (
        info: (fg: "{{ .hex.accent }}", bg: "black"),
        warn: (fg: "{{ .hex.accent }}", bg: "black"),
        error: (fg: "red", bg: "black"),
        debug: (fg: "light_green", bg: "black"),
        trace: (fg: "{{ .hex.accent }}", bg: "black"),
    ),
    progress_bar: (
        symbols: ["◖", "█", "◗", "█", "◗"],
        track_style: (fg: "#1e2030"),
        elapsed_style: (fg: "{{ .hex.accent }}"),
        thumb_style: (fg: "{{ .hex.accent }}", bg: "#1e2030"),
        use_track_when_empty: false,
    ),
    scrollbar: (
        symbols: ["│", "█", "", ""],
        track_style: (),
        ends_style: (),
        thumb_style: (fg: "{{ .hex.accent }}"),
    ),
    song_table_format: [
        (prop: (kind: Property(Title), default: (kind: Property(Filename))), width: "100%", label: "Title / Filename"),
        (prop: (kind: Property(Artist), default: (kind: Text("Unknown"))), width: "20%"),
        (prop: (kind: Property(Album), style: (fg: "white"), default: (kind: Text("Unknown"), style: (fg: "white"))), width: "20%"),
        (prop: (kind: Property(Duration), default: (kind: Text("-"))), width: "10%", alignment: Right),
    ],
    components: {},
    layout: Split(
        direction: Vertical,
        panes: [
            (borders: "ALL", pane: Pane(Tabs), size: "3"),
            (borders: "ALL", pane: Pane(Header), size: "4"),
            (borders: "NONE", pane: Pane(TabContent), size: "100%"),
            (borders: "ALL", pane: Pane(ProgressBar), size: "3"),
        ],
    ),
    header: (
        rows: [
            (
                left: [
                    (kind: Text("["), style: (fg: "{{ .hex.accent }}", modifiers: "Bold")),
                    (kind: Property(Status(StateV2(playing_label: "Playing", paused_label: "Paused", stopped_label: "Stopped"))), style: (fg: "{{ .hex.accent }}", modifiers: "Bold")),
                    (kind: Text("]"), style: (fg: "{{ .hex.accent }}", modifiers: "Bold"))
                ],
                center: [
                    (kind: Property(Song(Title)), style: (modifiers: "Bold"),
                        default: (kind: Property(Song(Filename)), style: (modifiers: "Bold"))
                    )
                ],
                right: [
                    (kind: Property(Widget(ScanStatus)), style: (fg: "{{ .hex.accent }}")),
                    (kind: Property(Widget(Volume)), style: (fg: "{{ .hex.accent }}"))
                ]
            ),
            (
                left: [
                    (kind: Property(Status(Elapsed))),
                    (kind: Text(" / ")),
                    (kind: Property(Status(Duration))),
                    (kind: Text(" (")),
                    (kind: Property(Status(Bitrate))),
                    (kind: Text(" kbps)"))
                ],
                center: [
                    (kind: Property(Song(Artist)), style: (fg: "{{ .hex.accent }}", modifiers: "Bold"),
                        default: (kind: Text("Unknown"), style: (fg: "{{ .hex.accent }}", modifiers: "Bold"))
                    ),
                    (kind: Text(" - ")),
                    (kind: Property(Song(Album)),
                        default: (kind: Text("Unknown Album"))
                    )
                ],
                right: [
                    (
                        kind: Property(Widget(States(
                            active_style: (fg: "white", modifiers: "Bold"),
                            separator_style: (fg: "white")))
                        ),
                        style: (fg: "dark_gray")
                    ),
                ]
            ),
        ],
    ),
    browser_song_format: [
        (
            kind: Group([
                (kind: Property(Track)),
                (kind: Text(" ")),
            ])
        ),
        (
            kind: Group([
                (kind: Property(Artist)),
                (kind: Text(" - ")),
                (kind: Property(Title)),
            ]),
            default: (kind: Property(Filename))
        ),
    ],
    cava: (
        bar_width: 2,
        bar_spacing: 0,
        bar_color: Gradient({
            0: "rgb(18, 18, 18)",
            20: "rgb(54, 54, 54)",
            40: "rgb(102, 102, 102)",
            60: "rgb(153, 153, 153)",
            80: "rgb(214, 214, 214)",
            100: "rgb(224, 224, 224)"
    })
    )
)
