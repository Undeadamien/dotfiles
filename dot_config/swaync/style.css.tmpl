* {
  font-family: "Ubuntu Nerd Font";
  font-size: 12px;
  color: {{ .hex.fg }};
  margin: 0;
  padding: 0;
}

*:hover {
  background: transparent;
}

.control-center {
  background: {{ .hex.bg }}ee;
  border: 1px solid {{ .hex.border }};
  border-radius: {{ .rounding }}px;
  padding: 10px;
}

.notification {
  background: {{ .hex.bg }}ee;
  border: 1px solid {{ .hex.border }};
  border-radius: {{ .rounding }}px;
  padding: 8px;
  margin: 0px 0;
}

.notification-body {
  color: {{ .hex.fg }};
}

.notification-icon {
  margin-right: 6px;
}

.notification-background {
  padding: 4px;
}

.notification-title {
  font-weight: bold;
  color: {{ .hex.fg }};
}

.notification-window {
  background: {{ .hex.bg }}ee;
  border: 1px solid {{ .hex.border }};
  border-radius: {{ .rounding }}px;
  padding: 8px;
}

.notification:hover {
  background: {{ .hex.bg }}dd;
}

.close-button,
.close-button:hover {
  background: transparent;
}
