#!/usr/bin/env zsh

# Neovim Config
export PATH="$PATH:/opt/nvim-linux64/bin"
export EDITOR="nvim"

# Plugins
fpath+=~/.zsh/zsh-completions/src
autoload -Uz compinit && compinit
if [ -f ~/.zsh/fzf-tab/fzf-tab.zsh ]; then
	source ~/.zsh/fzf-tab/fzf-tab.zsh
else echo "Missing fzf-tab"; fi
if [ -f ~/.zsh/zsh-vi-mode/zsh-vi-mode.zsh ]; then
	source ~/.zsh/zsh-vi-mode/zsh-vi-mode.zsh
else echo "Missing zsh-vi-mode"; fi

# Terminal Prompt
setopt prompt_subst
function update_prompt {
	PS1=$''

	PS1+=$'%{\e[1m%}'
	PS1+=$'%{\e[38;5;15m%}'
	PS1+=$'%n'
	PS1+=$'%{\e[m%}'

	PS1+=$':'

	PS1+=$'%{\e[2m%}'
	PS1+=$'%{\e[38;5;15m%}'
	PS1+=$'%~'
	PS1+=$'%{\e[m%}'

	PS1+=$'%{\e[1m%}'
	PS1+=$'%{\e[38;5;15m%}'
	PS1+=$'$'
	PS1+=$'%{\e[m%}'

	PS1+=$' '
}
update_prompt
